             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:LinGuGu16.UserControls">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxWidth="800" Margin="50 0">

        <uc:TimeSetting Title="Auto Attach" HasToggle="True" IsChecked="True"/>
        <uc:TimeSetting Title="Time Zone" HasToggle="True" IsChecked="False" Text="GMT +02:00,Eastern Eu..."/>
